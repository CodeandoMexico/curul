  .buscar
    %h1 buscar iniciativa
    = form_tag search_initiatives_path, :method => :post do |form|
      = text_field_tag 'search[keywords]', '', :placeholder => 'escribir palabras claves'
      = select_tag 'search[estado]', options_for_select(Region.all.collect {|region| [region.name, region.name]}), :prompt => 'estado'
      = select_tag 'search[political_party]', options_for_select(PoliticalParty.all.collect {|political_party| [political_party.name, political_party.id]}), :prompt => 'partido politico'
      = select_month(Date.today)
      = select_year(Date.today)
      = submit_tag 'Buscar', :class => 'button'
      
