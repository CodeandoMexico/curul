.box
  .box-title
    %h2 Nueva Iniciativa
  
  .box-content
    = form_for [:admin, @initiative], :html => {:multipart => true, class: 'form-horizontal'} do |form|
      = render "admin/shared/error_messages", :target => @initiative
      %fieldset
        = render :partial => 'form', :locals => {:form => form}
        .actions
          = form.submit 'Crear Iniciativa', :class => 'btn primary'
          %input{:type => 'reset', :class => 'btn', :value => 'Limpiar'}