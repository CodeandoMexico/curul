- iniciativa = comentario.commentable
.initiative
  .content
    .header
      %span.author= comentario.author
      comento en la propuesta:
    .representante_foto
      = image_tag(iniciativa.representative.avatar.url(:thumb)) if iniciativa.representative
    .iniciativa_resumen
      %span= link_to iniciativa.representative.name, congresista_path(iniciativa.representative) if iniciativa.representative
      = iniciativa.description[0, 160] + '...'
      = link_to raw("ver m&aacute;s >>"), iniciativa_path(iniciativa)

    %p
      = "\"#{comentario.comment}\""
    %p= I18n.localize(comentario.created_at, :format => :month_year).capitalize