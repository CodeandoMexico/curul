#iniciativas
  %h1 iniciativas
  
  %aside
    %h2
      buscar iniciativa
    
    = form_tag search_initiatives_path, :method => :post do |form|

      = text_field_tag 'search[keywords]', '', :placeholder => 'palabras clave', :class => 'input'

      = submit_tag :buscar, :class => 'button'
    
    %h2
      temas
    %ul.ul-aside
      - @temas.each do |tema|
        %li= link_to tema.name, "?search[topics_name_contains]=#{tema.name}"
  
  %section.container
    = render :partial => 'iniciativa', :locals => { :iniciativa => @iniciativa, :show => true }
    
    %article.iniciativa{:class => "#{(@iniciativa.main?)? 'main' :  ''}"}
      %h2 comentarios
      - @iniciativa.comments.each do |comment|
        - unless comment.comment.nil?
          %p.comment
            %span
              = comment.author
            = comment.comment